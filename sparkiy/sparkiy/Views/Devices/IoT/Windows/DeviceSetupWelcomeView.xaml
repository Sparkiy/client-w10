<UserControl
	x:Class="sparkiy.Views.Devices.IoT.Windows.DeviceSetupWelcomeView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<!-- Welcome message -->
		<TextBlock Text="Let's start." 
				   FontSize="{ThemeResource HubHeaderThemeFontSize}"
				   FontWeight="{ThemeResource HubHeaderThemeFontWeight}"
				   Margin="{ThemeResource HubSectionHeaderThemeMargin}"
				   VerticalAlignment="Center" HorizontalAlignment="Center" 
				   Grid.Row="1" />
		<TextBlock Text="This guide will help you setup your sparkiy IoT device in only three simple steps." 
				   HorizontalAlignment="Center"
				   VerticalAlignment="Center"
				   TextWrapping="WrapWholeWords"
				   TextAlignment="Center"
				   MaxWidth="360"
				   Grid.Row="2" />
		
		<!-- Continue button -->
		<Button Content="Continue" 
				Margin="0 24 0 8"
				VerticalAlignment="Center" HorizontalAlignment="Center" 
				Grid.Row="3" />
	</Grid>
</UserControl>
